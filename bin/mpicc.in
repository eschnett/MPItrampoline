#!/bin/sh

# We choose to behave like OpenMPI in this respect.
#
# All OpenMPI versions support "-showme". Modern OpenMPI version also
# support "-showme:compile" and "-showme:link".
#
# MPICH supports "-compile-info" and "-link-info".

MPITRAMPOLINE_CC=${MPITRAMPOLINE_CC:-@CMAKE_C_COMPILER@}
MPITRAMPOLINE_CFLAGS=${MPITRAMPOLINE_CFLAGS:-@CMAKE_C_FLAGS@}

case "$1" in
    -showme:command)
        echo "$MPITRAMPOLINE_CC $MPITRAMPOLINE_CFLAGS"
        exit 0
        ;;
    -showme:compile)
        echo '-I@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_INCLUDEDIR@'
        exit 0
        ;;
    -showme:link)
        echo '-L@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@ -Wl,-rpath,@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@ -lmpitrampoline -ldl'
        exit 0
        ;;
    -showme:incdirs)
        echo '@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_INCLUDEDIR@'
        exit 0
        ;;
    -showme:libdirs)
        echo '@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@'
        exit 0
        ;;
    -showme:libs)
        echo '-lmpitrampoline -ldl'
        exit 0
        ;;
    -showme:version)
        echo '@PROJECT_NAME@ @PROJECT_VERSION@'
        echo '@PROJECT_DESCRIPTION@'
        echo '@CMAKE_PROJECT_HOMEPAGE_URL@'
        exit 0
        ;;
    -showme:help)
        echo "$0"' {-showme:{command|compile|link|incdirs|libdirs|libs|version|help}|-show*} args'
        exit 0
        ;;
    -show*)
        echo "$MPITRAMPOLINE_CC $MPITRAMPOLINE_CFLAGS "'-I@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_INCLUDEDIR@ @LINK_FLAGS@ -L@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@ -Wl,-rpath,@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@ -lmpitrampoline -ldl'
        exit 0
        ;;
esac

# Are we linking?
linking=true
for arg in "$@"; do
    if [ "$arg" = "-E" ] || [ "$arg" = "-c" ] || [ "$arg" = "-S" ]; then
        linking=false
        break
    fi
done

# Can we use rpath? (The Darwin linker has an '-r' argument that
# merges object files together. It does not work with '-rpath'.)
add_rpath=true
for arg in "$@"; do
    if [ "$arg" = "-r" ] || [ "$arg" = "-Wl,-r" ]; then
        add_rpath=false
        break
    fi
done

if [ $linking != true ]; then
    exec $MPITRAMPOLINE_CC $MPITRAMPOLINE_CFLAGS -I@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_INCLUDEDIR@ "$@"
elif [ $add_rpath != true ]; then
    exec $MPITRAMPOLINE_CC $MPITRAMPOLINE_CFLAGS -I@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_INCLUDEDIR@ @LINK_FLAGS@ -L@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@ "$@" -lmpitrampoline -ldl
else
    exec $MPITRAMPOLINE_CC $MPITRAMPOLINE_CFLAGS -I@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_INCLUDEDIR@ @LINK_FLAGS@ -L@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@ -Wl,-rpath,@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@ "$@" -lmpitrampoline -ldl
fi
