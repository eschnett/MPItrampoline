#!/bin/sh

# We choose to behave like OpenMPI in this respect.
#
# All OpenMPI versions support "-showme". Modern OpenMPI version also
# support "-showme:compile" and "-showme:link".
#
# MPICH supports "-compile-info" and "-link-info".

MPITRAMPOLINE_FC=${MPITRAMPOLINE_FC:-@CMAKE_Fortran_COMPILER@}
MPITRAMPOLINE_FCFLAGS=${MPITRAMPOLINE_FCFLAGS:-@CMAKE_Fortran_FLAGS@}

case "$1" in
    -showme:command)
        echo "$MPITRAMPOLINE_FC $MPITRAMPOLINE_FCFLAGS"
        exit 0
        ;;
    -showme:compile)
        echo '-I@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_INCLUDEDIR@'
        exit 0
        ;;
    -showme:link)
        echo '-L@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@ -Wl,-rpath,@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@ -lmpi -ldl'
        exit 0
        ;;
    -showme:incdirs)
        echo '@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_INCLUDEDIR@'
        exit 0
        ;;
    -showme:libdirs)
        echo '@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@'
        exit 0
        ;;
    -showme:libs)
        echo '-lmpi -ldl'
        exit 0
        ;;
    -showme:version)
        echo '@PROJECT_NAME@ @PROJECT_VERSION@'
        echo '@PROJECT_DESCRIPTION@'
        echo '@CMAKE_PROJECT_HOMEPAGE_URL@'
        exit 0
        ;;
    -showme:help)
        echo "$0"' {-showme:{command|compile|link|incdirs|libdirs|libs|version|help}|-show*} args'
        exit 0
        ;;
    -show*)
        echo "$MPITRAMPOLINE_FC $MPITRAMPOLINE_FCFLAGS "'-I@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_INCLUDEDIR@ @LINK_FLAGS@ -L@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@ -Wl,-rpath,@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@ -lmpi -ldl'
        exit 0
        ;;
esac

exec $MPITRAMPOLINE_FC $MPITRAMPOLINE_FCFLAGS -I@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_INCLUDEDIR@ @LINK_FLAGS@ -L@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@ -Wl,-rpath,@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@ "$@" -lmpi -ldl
